<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@drawable/border_bottom_layout_item">
            <ImageView
                android:id="@+id/order_clothes_img"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/order_clothes_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한복 이름"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/order_clothes_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~~~~~~~~~~한복 설명~~~~~~~~~~"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom_layout_item"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대여비"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000" />
            <TextView
                android:id="@+id/order_clothes_price"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16,000원"
                android:textSize="15dp"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom_layout_item"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/order_clothes_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1개"
                android:textAlignment="textEnd"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:background="@drawable/upper_shadow_todo"></View>
</LinearLayout>